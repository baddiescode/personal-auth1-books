        <div class="col-sm-6">
          <h3>Books</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <br><span><strong>Title: </strong><%= messages[i].name %></span></br>
              <br><span><strong>Author: </strong><%= messages[i].msg %></span></br>
              <br><span><strong>Description: </strong><%= messages[i].description %></span></br>
              <br><span><strong>Review: </strong><%= messages[i].review %></span></br>
              <!-- <span><%= messages[i].thumbUp %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
              <span><i class="fa fa-trash" aria-hidden="true" data-id="<%= messages[i]._id %>"></i></span>
            </li>
          <% } %>
          </ul>

          <h2>Recommend a Book</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" placeholder="Book Title" name="name">
            <input type="text" placeholder="Author" name="msg">
            <textarea type="text" placeholder="Description" name="description" ></textarea>
            <textarea type="text" placeholder="Review" name="review" ></textarea>
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
